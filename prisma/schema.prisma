generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  FACULTY
}

enum CallStatus {
  NOT_CALLED
  RINGING
  CALL_BACK
  INTERESTED
  NOT_INTERESTED
  ADMISSION_TAKEN
}

enum Interest {
  MCA
  NURSING
  BTECH
  BCA
  MBA
  DIPLOMA
  OTHER
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(FACULTY)
  students  Student[]
  createdAt DateTime @default(now())
}

model Student {
  id            String      @id @default(cuid())
  name          String
  phone         String      @unique  // <--- THIS is @unique
  address       String?
  prevCourse    String?
  futureInterest Interest?
  callStatus    CallStatus  @default(NOT_CALLED)
  notes         String?     @db.Text
  
  uploadedBy    User        @relation(fields: [uploadedById], references: [id])
  uploadedById  String
  
  lastUpdatedBy String?
  updatedAt     DateTime    @updatedAt
  createdAt     DateTime    @default(now())
}